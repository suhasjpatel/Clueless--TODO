<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="com.todo.clueless.client.controllers.GameController">
    <top>
        <Label prefHeight="40.0" text="Clueless" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </padding>
            <font>
                <Font size="32.0"/>
            </font>
        </Label>
    </top>
    <bottom>
        <TextArea fx:id="messageBox" editable="false" prefHeight="90.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0"/>
            </padding>
        </TextArea>
    </bottom>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="650.0" prefWidth="150.0" BorderPane.alignment="TOP_CENTER">
            <children>
                <Label text="Player Notebook" textAlignment="CENTER"/>
                <Separator>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Suspects" textAlignment="CENTER"/>
                <Separator/>
                <VBox fx:id="suspectVBox" prefHeight="150.0"/>
                <Separator>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Weapons" textAlignment="CENTER"/>
                <Separator/>
                <VBox fx:id="weaponVBox" prefHeight="150.0"/>
                <Separator prefWidth="100.0">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Room" textAlignment="CENTER"/>
                <Separator/>
                <VBox fx:id="roomVBox" prefHeight="150.0"/>
                <Separator>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <RadioButton fx:id="suggestRadio" mnemonicParsing="false" text="Suggest"/>
                        <RadioButton fx:id="accuseRadio" mnemonicParsing="false" text="Accuse"/>
                    </children>
                </HBox>
                <Separator prefWidth="200.0">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <Button fx:id="confirmButton" alignment="CENTER" mnemonicParsing="false" onAction="#confirmAction"
                        text="Confirm"/>
                <Separator prefWidth="200.0">
                    <padding>
                        <Insets top="20.0"/>
                    </padding>
                </Separator>
                <Button fx:id="endTurnButton" alignment="CENTER" mnemonicParsing="false" onAction="#endTurnAction"
                        text="End Turn"/>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </right>
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="650.0" prefWidth="150.0" BorderPane.alignment="TOP_CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <children>
                <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="Player Information" textAlignment="CENTER"/>
                <Separator prefWidth="200.0">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <Label text="Player Name"/>
                <Label fx:id="playerName"/>
                <Separator prefWidth="200.0">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <Label text="Character"/>
                <Label fx:id="characterName"/>
                <Separator prefWidth="200.0">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <Label text="Current Location"/>
                <Label fx:id="currentLocationLabel"/>
                <Separator prefWidth="200.0">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <Label text="Cards"/>
                <Separator prefWidth="200.0"/>
                <VBox fx:id="cardsVBox" alignment="TOP_CENTER" prefHeight="155.0"/>
                <Separator prefWidth="200.0">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <Label text="Seen Cards"/>
                <Separator prefWidth="200.0"/>
                <ScrollPane fx:id="seenCards" hbarPolicy="NEVER" prefHeight="155.0">
                    <content>
                        <VBox fx:id="seenCardsVBox" prefHeight="200.0"/>
                    </content>
                </ScrollPane>
                <Separator prefWidth="200.0">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <Label text="Movement"/>
                <Separator prefWidth="200.0">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <ComboBox fx:id="movementComboBox" prefWidth="150.0" promptText="&lt;Move Location&gt;"/>
                <Separator prefWidth="200.0">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Separator>
                <Button fx:id="moveButton" mnemonicParsing="false" onAction="#moveAction" text="Move"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" top="10.0"/>
            </padding>
        </VBox>
    </left>
    <center>
        <ImageView fitHeight="480.0" fitWidth="480.0" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER">
            <image>
                <Image url="@images/map.png"/>
            </image>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </ImageView>
    </center>
</BorderPane>
